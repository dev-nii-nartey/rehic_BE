// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id           String @id @unique
  username     String
  email        String @unique
  password     String
  role         Role
  phone_number String
  address      String

  @@map("users")
}

model Products {
  name           String @unique
  price          Int
  description    String
  category       String
  stock_quantity String
}

