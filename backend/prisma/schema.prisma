// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id           String    @id @unique
  username     String
  email        String    @unique
  password     String
  role         Role      @default(CUSTOMER)
  phone_number String
  createdAt    DateTime  @default(now())
  address      Address[]

  @@map("users")
}

model Product {
  name           String @unique
  price          Int
  description    String
  category       String
  stock_quantity String

  @@map("products")
}

model Address {
  id             Int     @unique @default(autoincrement())
  street_address String
  address2       String?
  phone_number   String
  user           User    @relation(fields: [userId], references: [id])
  userId         String

  @@map("addresses")
}
