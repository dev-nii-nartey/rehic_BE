generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id           String
  username     String
  email        String   @unique
  password     String
  role         Role
  phone_number String
  createdAt    DateTime @default(now())
  address      String?

  @@map("users")
}

model Product {
  id             Int    @id @default(autoincrement())
  name           String
  price          Int
  description    String
  category       String
  stock_quantity String

  @@map("products")
}

